<script>
    document.addEventListener('DOMContentLoaded', function () {
        let heights = $("#easter-content .summary-item").map(function () {
            return $(this).height();
        }).get();

        let maxHeight = 0;
        heights.forEach(h => {
            if (h > maxHeight) {
                maxHeight = h;
            }
        });
        $("#easter-content .summary-item").height(maxHeight);
    });
</script>
